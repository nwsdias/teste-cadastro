{% extends 'base.html.twig' %}

{% block title %}Produto{% endblock %}

{% block body %}
    <h3>Produto</h3>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produto.id }}</td>
            </tr>
            <tr>
                <th>Código</th>
                <td>{{ produto.codigo }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ produto.nome }}</td>
            </tr>
            <tr>
                <th>Preço</th>
